<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSetBudgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Budget Goals"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" />

        <!-- Minimum Goal -->
        <EditText
            android:id="@+id/etMinGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Minimum Goal"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#757676"
            app:layout_constraintTop_toBottomOf="@id/tvSetBudgetTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Maximum Goal -->
        <EditText
            android:id="@+id/etMaxGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Maximum Goal"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#757676"
            app:layout_constraintTop_toBottomOf="@id/etMinGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveGoals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save Goals"
            android:textColor="#ffffff"
            android:backgroundTint="#4A7C7D"
            app:cornerRadius="32dp"
            app:layout_constraintTop_toBottomOf="@id/etMaxGoal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:padding="14dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
