<resources>
<style name="CustomCardStyle">
    <item name="android:layout_marginVertical">8dp</item>
    <item name="cardCornerRadius">12dp</item>
    <item name="cardElevation">4dp</item>
    <item name="cardBackgroundColor">#FFFFFF</item>
    <item name="strokeColor">#B0C4C4</item>
    <item name="strokeWidth">1dp</item>
</style>

<style name="CardRowStyle">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:orientation">horizontal</item>
<item name="android:padding">16dp</item>
</style>
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarTheme">@style/CustomCalendarStyle</item>
    </style>

    <style name="CustomCalendarStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/custom_teal</item>
        <item name="colorPrimaryVariant">@color/custom_teal</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Only supported MaterialCalendar attributes -->
    </style>

    <!-- Custom Day Style -->
    <style name="CustomDayStyle" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="android:textColor">@color/custom_teal</item>
    </style>
</resources>